<div class="row">
        <hr class="hr-20px">
        <div class="phtos profile-gallery-div" id="recommend-text" onclick="clickPhotos()">
            <button class="profile-btn photos-btn">Photos</button>
            <hr class="recommend-hr">                        
        </div>
        <div class="projects profile-gallery-div" id="wedding-text" onclick="clickProjects()">
                <button class="profile-btn btn-inactive">Projects</button>  
            </div>
            <div class="events profile-gallery-div" id="wildlife-text" onclick="clickEvents()">
                <button class="profile-btn btn-inactive">Events</button>
            </div>
            <div class="overview profile-gallery-div" id="wildlife-text" onclick="clickOverview()">
                <button class="profile-btn btn-inactive">Overview</button>
            </div>
        <div class="edit profile-gallery-div" id="wildlife-text" onclick="clickEdit()">
            <button class="profile-btn btn-active">Update Profile</button>
        </div>
    </div>
<form method="POST" action="./user">
    <label>Name:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </label><input class="update-input" type="text" name="name" value="<%= user_info.name %>"><hr class="hr-20px">
    <label>Username: </label><input class="update-input" type="text" name="name" value="<%= user_info.username %>"><hr class="hr-20px">
    <label>Tagline: </label><input class="update-input" type="text" name="tagline" value="<%= user_info.username %>"><hr class="hr-20px">
    <label>Email: </label><input class="email-input" type="text" name="email" value="<%= user_info.email %>" readonly><hr class="hr-20px">
    <label>Facebook: </label><input class="update-input" type="text" name="fb" value="" placeholder="paste your facebook link"><hr class="hr-20px">
    <label>Instagram: </label><input class="update-input" type="text" name="insta" value="" placeholder="paste your instagram link"><hr class="hr-20px">
    <label>Passowrd: </label><input class="update-input" type="password" name="password" value="<%= user_info.password %>"><br><br><hr class="hr-20px">
    <button type="button" class="btn btn-success" onclick="update_profile()">Update</button>
</form>